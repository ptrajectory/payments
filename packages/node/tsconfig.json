{
    "compilerOptions": {
      "target": "esnext",
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "CommonJS", 
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noErrorTruncation": true,
      "allowImportingTsExtensions": true,
      "outDir": "./dist",
      "baseUrl": "."
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  