{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,                                   
      "skipLibCheck": true,
      "moduleResolution": "Node",
      "outDir": "./dist",
      "noErrorTruncation": true                              
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts"]
  }
  