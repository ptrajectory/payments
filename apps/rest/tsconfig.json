{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noErrorTruncation": true,
    "outDir": "./dist",
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"],
  "files": ["src/index.ts"],
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}
